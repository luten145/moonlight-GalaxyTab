<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:foregroundGravity="bottom">

        <com.limelight.ui.StreamView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#00ff0000"
            android:foregroundGravity="bottom" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:foregroundGravity="bottom"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/norch"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="28px"
        android:gravity="top"
        android:layout_gravity="top">

        <LinearLayout
            android:id="@+id/norchBackgroundSize"
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:background="#000000"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/norchBackground"
                android:layout_width="300dp"
                android:layout_height="28px"
                android:background="#000000"
                android:adjustViewBounds="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="2960px"
            android:layout_height="28px"
            android:background="#00ff0000"
            android:gravity="top"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            //Tab S8 Ultra Only

            <LinearLayout
                android:id="@+id/imagetest"
                android:layout_width="2960px"
                android:layout_height="28px"
                android:background="#00ff0000"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="1480px"
                    android:layout_height="match_parent"
                    android:background="#00ff0000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/norchLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="#00ff0000"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="20px" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="1480px"
                    android:layout_height="match_parent"
                    android:background="#00ff0000"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/action1"
                        android:background="#00ff0000"
                        android:layout_width="100px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="100px"/>

                    <Button
                        android:id="@+id/action2"
                        android:background="#00ff0000"
                        android:layout_width="100px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="100px"/>

                    <TextView
                        android:id="@+id/norchRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:background="#00ff0000"
                        android:gravity="right"
                        android:textColor="#ffffff"
                        android:textSize="20px" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="800px"
            android:layout_height="500px"
            android:background="#ff00ff"
            android:orientation="vertical"
            android:layout_marginStart="1790px"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/overlayBitrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="10dp"
                android:text="Mbps"/>

            <SeekBar
                android:id="@+id/overlayBitrateSeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Set"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Cancel"/>

        </LinearLayout>

        <TextView
            android:id="@+id/notificationOverlay"
            android:background="#80000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#ffffff"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/spenDebug"
            android:background="#80000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"/>
    </RelativeLayout>
</merge>
